<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    //EditText

    <style name="editText">
        <item name="android:textSize">18sp</item>
        <item name="android:color">@color/colorEditText</item>
        <item name="android:padding">@dimen/paddingEditText</item>
        <item name="android:layout_margin">@dimen/marginItem</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //Edittext Read Only

    <style name="readOnly">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/paddingEditText</item>
        <item name="android:layout_margin">@dimen/marginItem</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //Button

    <style name="button">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/paddingButtonVertical</item>
        <item name="android:paddingBottom">@dimen/paddingButtonVertical</item>
        <item name="android:paddingLeft">@dimen/paddingButtonHorizontal</item>
        <item name="android:paddingRight">@dimen/paddingButtonHorizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //MenuTextView

    <style name="menuText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //header linearLayout

    <style name="headerLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:background">@color/colorHeaderBackground</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //header image back

    <style name="headerImageBack">
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:layout_width">@dimen/header_height</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    //header text style

    <style name="headerTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/marginItem</item>
        <item name="android:layout_marginRight">@dimen/marginItem</item>
    </style>

</resources>
